{
  "exclude": [
    "./buildConfig/*.ts",
    "./**/*.test.ts",
    "./build/**/*"
  ],
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./build/cjs",
    "rootDir": "./src",
    "sourceRoot": "./src",
    "declarationDir": "./build/cjs",
    // ECMAS Module + ES2021 + Node-16LTS
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": false,
    // STRUCTURE
    "composite": true, // <-- must be on
    // EMISSIONS
    "declaration": true,
    "declarationMap": true, // maps add extra intellisense features
    "sourceMap": true, // both "*.d.ts.map" and "*.js.map" files
    "inlineSources": true,
    "noEmitOnError": true,
    "noEmit": false, // Can be used when you want to emit only one build
  }
}